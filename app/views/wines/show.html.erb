<div class="panel panel--wine panel--top">
  <h1 class="panel__title">
    <%= @wine.name %>
    <small>
      <%= link_to edit_wine_path(@wine), class: "link--wine" do %>
        <i class="fa fa-pencil icon" aria-hidden="true"></i>
      <% end %>
    </small>
  </h1>
</div>
<div class="panel panel--middle">
  <p>
    <% if @wine.photo? %>
      <%= cl_image_tag @wine.photo.path, angle: "exif", class: "img-responsive" %>
    <% end %>
  </p>
  <p>
    <%= stars(@wine.rating, class: "stars--x2") if @wine.rated? %>
    <%= link_to edit_wine_rating_path(@wine), class: "link--wine" do %>
      <i class="fa fa-pencil icon" aria-hidden="true"></i>
      <%= "Noter ce vin" unless @wine.rated? %>
    <% end %>
  </p>
  <p>
    <i class="fa fa-glass" aria-hidden="true"></i>
    Couleur : <span class="font--light"><%= @wine.color %></span>
  </p>
  <p>
    <i class="fa fa-map-marker" aria-hidden="true"></i>
    Appellation : <span class="font--light"><%= @wine.appellation %></span>
  </p>
  <p>
    <i class="fa fa-calendar" aria-hidden="true"></i>
    Ann√©e : <span class="font--light"><%= @wine.year %></span>
  </p>
  <p>
    <i class="fa fa-globe" aria-hidden="true"></i>
    Pays : <span class="font--light"><%= @wine.pretty_country %></span>
  </p>
  <p>
    <i class="fa fa-comment" aria-hidden="true"></i>
    Commentaires : <span class="font--light"><%= @wine.comment %></span>
  </p>
</div>
<%= link_to "< Retour", wines_path, class: "btn btn-lg btn-block margin--bottom-50 panel__btn panel--bottom btn-wine-alt" %>

