<%= simple_form_for beer do |f| %>
  <%= f.input :name, label: false, placeholder: "Nom" %>
  <%= f.input :brewery, label: false, placeholder: "Brasseur" %>
  <%= f.input :style, collection: Beer.styles, label: false, placeholder: "Style" %>
  <%= f.input :country, priority: [ "France" ], label: false %>
  <%= f.input :photo, as: :attachinary %>
  <%= f.button :submit, "Ajouter", class: "btn btn-danger" %>
<% end %>
