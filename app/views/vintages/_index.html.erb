<p>
  Stocks :<br>
  <%= link_to new_wine_vintage_path(wine), class: "link--wine" do %>
   <i class="fa fa-plus-circle icon" aria-hidden="true"></i>
   Ajouter des stocks
  <% end %>
</p>
<dl class="dl-vintages">
  <% wine.vintages.ranked.each do |vintage| %>
    <dt class="dl-vintages__year"><%= vintage.year %></dt>
    <dd class="dl-vintages__stock">
      <p>
        <%= "#{vintage.stock.to_i} x " %>
        <%= image_tag "bottle_wine.svg", class: "image--xs dl-vintages__bottle-img" %>
        <%= link_to edit_vintage_path(vintage), class: "link--wine" do %>
          <i class="fa fa-pencil icon" aria-hidden="true"></i>
        <% end %>
      </p>
    </dd>
  <% end %>
</dl>
